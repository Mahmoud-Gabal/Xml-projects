<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/textready"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:gravity="center"
        android:text="Your order will be ready in \n 15 min"
        android:textSize="30sp"
        android:fontFamily="@font/bungee"
        android:textColor="#8A3B22"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:fontFamily="@font/bungee"
        android:text="Go back"
        android:textColor="#8A3B22"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textready" />

    <ImageView
        android:id="@+id/ivphoto"
        android:layout_width="250sp"
        android:layout_height="200sp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/textready"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnupload"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:fontFamily="@font/bungee"
        android:text="upload your best meal"
        android:textColor="#8A3B22"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnback" />
</androidx.constraintlayout.widget.ConstraintLayout>